extends ../layouts/email-form-layout

block content
    .login-page__header
      .login-page__header--title Organize Your Brain
      .login-page__header--subtitle FloWorky is a notebook for lists. Use it to be more productive and creative.
    form.form__login(method='post')
      .form__group.form__email-container
        label.col-sm-2.form__label(for='email') Email:
        br
        input.form__input--home(type='email', name='email', id='email')
        .form__help-block.form__help-block--hidden Please enter a valid email address

      .form--group
        label.col-sm-2.form__label(for='password') Password:
        br
        input.form__input--home(type='password', name='password', id='password')

      .form--group
        button.btn.btn__home.btn--large(type='submit') Log in
